<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".activity.OwnerActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/email_login_form"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:text="BASIC DETAILS"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <View
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        >

                        <LinearLayout
                            android:layout_width="50dp"
                            android:padding="5.7dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_left_corner_bg">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_name"
                                android:scaleType="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_right_corner_bg"
                            android:hint="@string/full_name"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="16dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="1dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="50dp"
                            android:padding="5.7dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_left_corner_bg">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_user"
                                android:scaleType="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/etEmail"
                            android:inputType="textEmailAddress"
                            android:hint="@string/email"
                            android:maxLines="2"
                            android:maxLength="40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_right_corner_bg"
                            android:padding="16dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        >
                        <LinearLayout
                            android:layout_width="50dp"
                            android:padding="5.7dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_left_corner_bg">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_number"
                                android:scaleType="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/etNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_right_corner_bg"
                            android:hint="@string/Phone_number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:padding="16dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        >

                        <LinearLayout
                            android:layout_width="50dp"
                            android:padding="5.7dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_left_corner_bg">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_state"
                                android:scaleType="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/etState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_right_corner_bg"
                            android:hint="@string/state_name"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="16dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        >
                        <LinearLayout
                            android:layout_width="50dp"
                            android:padding="5.7dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_left_corner_bg">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_city"
                                android:scaleType="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/etCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_right_corner_bg"
                            android:hint="@string/city_name"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="16dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        >
                        <LinearLayout
                            android:layout_width="50dp"
                            android:padding="5.7dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_left_corner_bg">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_colony"
                                android:scaleType="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/etColony"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_right_corner_bg"
                            android:hint="@string/Colony_name"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="16dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        >
                        <LinearLayout
                            android:layout_width="50dp"
                            android:padding="5.7dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_left_corner_bg">
                            <ImageView
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_landmark"
                                android:scaleType="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/etLandmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_right_corner_bg"
                            android:hint="@string/landmark_name"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:padding="16dp"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue_btn_bg"
                android:text="@string/next"
                android:layout_marginTop="30dp"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
</ScrollView>
