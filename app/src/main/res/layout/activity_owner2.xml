<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.OwnerActivity2">

<TextView
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/please_select_your_room_specification"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <Button
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:text="@string/basics"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="center_horizontal"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/checkBathroom"
                android:layout_marginStart="25dp"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bathroom"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkBalcony"
                    android:layout_marginEnd="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/balcony"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>
            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkParking"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parking"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkPowerSupply"
                    android:layout_marginEnd="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/power_supply"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>
              </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkKitchen"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kitchen"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkWaterSupply"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/water_supply"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intermediate"
        android:textSize="19sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkWiFi"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wi_fi"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkPowerBackUp"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/power_backup"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkAirConditioning"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/air_conditioning"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkLaundry"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/laundry"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkLift"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lift"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkSecurity"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/security_cctv"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkRoWaterSystem"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ro_water_system"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkFireExtinguisher"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fire_extinguisher"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkWasteDisposal"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waste_disposal"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>
<!--                <RelativeLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->
<!--                    <CheckBox-->
<!--                        android:id="@+id/checkFireExtinguisher"-->
<!--                        android:layout_marginEnd="25dp"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="FIRE EXTINGUISHER"-->
<!--                        android:textSize="15sp"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textColor="@android:color/holo_green_dark"/>-->
<!--                </RelativeLayout>-->
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advance"
        android:textSize="19sp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkClubHouse"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/club_house"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkSwimmingPool"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swimming_pool"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkPark"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/park"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkGymnasium"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gymnasium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkKidsPlayArea"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kids_play_area"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkKidsClub"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kids_club"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkFlowers"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flowers_garden"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkMultipurposeHall"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/multipurpose_hall"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_btn_bg"
        android:text="@string/next"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:layout_marginBottom="3dp"
        />

</LinearLayout>
</ScrollView>
